<div class='my-4'>
  <a href='/courses/create'>
    <button>Them khoa hoc</button>
  </a>
  <div class='row'>
    {{#each courses}}
      <div class='col-sm-6 col-lg-4'>
        <div class='card mt-4' style='width: 18rem;'>
          <a href='/courses/{{this.slug}}'><img
              src='{{this.image}}'
              class='card-img-top'
              alt={{this.name}}
            /></a>
          <div class='card-body'>
            <a href='/courses/{{this.slug}}'><h5
                class='card-title'
              >{{this.name}}</h5></a>
            <p class='card-text'>{{this.description}}</p>
            <button class='btn btn-primary'>Go somewhere</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>