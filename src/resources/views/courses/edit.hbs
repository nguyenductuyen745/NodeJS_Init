<div>
  <h1 class='my-4'>Cap Nhat Khoa Hoc</h1>

  <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group mt-3'>
      <label for='name'>Ten khoa hoc</label>
      <input
        type='text'
        name='name'
        value='{{course.name}}'
        class='form-control mt-2'
        id='name'
      />
    </div>
    <div class='form-group mt-3'>
      <label for='description'>Mo ta</label>
      <textarea
        name='description'
        class='form-control mt-2'
        id='description'
      >{{course.description}}</textarea>
    </div>
    <div class='form-group mt-3'>
      <label for='videoId'>Video ID</label>
      <input
        type='text'
        name='videoId'
        value='{{course.videoId}}'
        class='form-control mt-2'
        id='videoId'
      />
    </div>
    <div class='form-group mt-3'>
      <label for='level'>Trinh do</label>
      <input
        type='text'
        name='level'
        value='{{course.level}}'
        class='form-control mt-2'
        id='level'
      />
    </div>
    <button type='submit' class='btn btn-primary mt-4'>Cap nhat khoa hoc</button>
  </form>
</div>